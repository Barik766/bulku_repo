@model List<Company>

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
                Company List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                Create New Company <i class="bi bi-plus-lg"></i>
            </a>
        </div>
    </div>

    <div class="pb-md-5">
        <table id="tblData" class="table table-bordered table-striped " style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Company Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th></th>

                </tr>
            </thead>

        </table>
    </div>
    

</div>

@section Scripts{
    <script src="~/js/company.js"></script>
}