@model List<Product>

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                Create New Product <i class="bi bi-plus-lg"></i>
            </a>
        </div>
    </div>

    <div class="pb-md-5">
        <table id="tblData" class="table table-bordered table-striped " style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Product Title
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        ListPrice
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Category
                    </th>
                    <th></th>

                </tr>
            </thead>

        </table>
    </div>
    

</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}